{% if nextcloud_s3_enable %}
# S3
S3_ACCESS_KEY={{ nextcloud_s3_access_key }}
S3_SECRET_KEY={{ nextcloud_s3_secret_key }}
S3_BUCKETNAME={{ nextcloud_s3_bucketname }}
S3_AUTOCREATE={{ nextcloud_s3_autocreate }}
S3_HOST={{ nextcloud_s3_host }}
S3_PORT={{ nextcloud_s3_port }}
S3_USE_PATH_STYLE={{ nextcloud_s3_use_path_style }}
S3_USE_SSL={{ nextcloud_s3_use_ssl }}
{% endif %}